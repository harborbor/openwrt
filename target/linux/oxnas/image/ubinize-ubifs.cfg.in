[boot]
# Volume mode (other option is static)
mode=ubi
# Source image
image=@KERNELUIMAGE@
# Volume ID in UBI image
vol_id=0
# Allow for dynamic resize
vol_type=dynamic
# Volume name
vol_name=kernel
[rootfs]
# Volume mode (other option is static)
mode=ubi
# Source image
image=@ROOTFSIMAGE@
# Volume ID in UBI image
vol_id=1
# Allow for dynamic resize
vol_type=dynamic
# Volume name
vol_name=rootfs
vol_flags=autoresize
